<%-layout("layouts/boilerplate.ejs")%>

<body>
    <div class="chatbot-container">
      <div class="chat-title">
        <h5>New Chat</h5>
        <i class="fa-solid fa-ellipsis-vertical"></i>
      </div>
        <div id="msg-box">
          
        </div>
        <form id="search-form" class="row search-input-container" autocomplete="off">
          <div class="search-wrap">
            <div class="input-container">
              <div class="input-field-container">
                <input type="text" class="holo-input" placeholder="Message Pod X" id="user-message" name="content"/>
                <div class="input-border"></div>
                <div class="holo-scan-line"></div>
                <div class="input-glow"></div>
                <div class="input-options">
                  <label for="input-option-all" class="input-option">
                    <input type="radio" name="inputOption" id="input-option-all" value="all" checked/>
                    <span><i class="fa-solid fa-globe"></i>All</span>
                  </label>
                  <label for="input-option-music" class="input-option">
                    <input type="radio" name="inputOption" id="input-option-music" value="audio" />
                    <span><i class="fa-solid fa-video"></i>Video Podcast</span>
                  </label>
                  <label for="input-option-podcast" class="input-option">
                    <input type="radio" name="inputOption" id="input-option-podcast" value="video"/>
                    <span><i class="fa-solid fa-microphone-lines"></i>Audio Podcast</span>
                  </label>
                </div>
                <button type="submit" class="input-active-indicator"><i class="fa-solid fa-arrow-up"></i></button>
              </div>
            </div>
          </div>
        </form>
    </div>
    
  </body>

  <script>
    let messages = <%- JSON.stringify(messages || []) %>;
    let chat=<%- JSON.stringify(chat) %>;
  </script>
